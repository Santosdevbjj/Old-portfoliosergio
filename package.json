{
  "name": "portfoliosergiosantos",
  "private": true,
  "version": "1.0.1",
  "description": "Portfólio multilíngue e responsivo de Sérgio Santos, desenvolvido com Next.js, TailwindCSS e MDX.",
  "author": "Sérgio Santos",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seuusuario/portfoliosergiosantos.git"
  },
  "bugs": {
    "url": "https://github.com/seuusuario/portfoliosergiosantos/issues"
  },
  "homepage": "https://portfoliosergiosantos.vercel.app",
  "keywords": [
    "nextjs",
    "react",
    "tailwindcss",
    "portfolio",
    "multilingual",
    "responsive",
    "typescript",
    "mdx",
    "seo"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "preview": "next build && next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "check": "npm run lint && npm run type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "vercel-build": "next build",
    "vercel-start": "next start"
  },
  "dependencies": {
    "next": "14.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.31",
    "autoprefixer": "^10.4.16",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/container-queries": "^0.1.1",
    "js-cookie": "^3.0.5",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0",
    "@next/mdx": "^14.1.0",
    "gray-matter": "^4.0.3",
    "remark": "^14.0.2",
    "remark-gfm": "^3.0.1"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/react": "^18.2.45",
    "@types/node": "^20.11.5",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": ["next lint --fix", "prettier --write"],
    "*.{css,md}": ["prettier --write"]
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  }
}
